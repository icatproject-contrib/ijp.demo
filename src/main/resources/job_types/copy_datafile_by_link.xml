<jobType sessionId='true' icatUrlRequired='true' idsUrlRequired='true'
    acceptsDatasets='true' acceptsDatafiles='true'>
    <name>Copy datafile by link</name>
    <!--
        Copy datafile to another dataset using IDS getLink
        Can be applied to datasets of type TestDatasetType.
        Expects: one datafileId (source datafile), one datasetId (target dataset)
        (so need to set multiple to true as 1+1 > 1!)
        Options: (none)
        Requires sessionId, ICAT and IDS server URLs to be supplied by IJP.
    -->
    <executable>copy_datafile_by_link.py</executable>
    <multiple>true</multiple>
    <type>batch</type>
    <datasetTypes>${dataset.type.1}</datasetTypes>
</jobType>
